<div class="main">
	<button {{action exportToExcel}} class="btn btn-primary btn-xs">Export to Excel</button>
	<button {{action printTable}} class="btn btn-primary btn-xs">Print Table</button>
	<br/><br/>
	<table class="table table-hover table-bordered" id="summary">
		<tr>
			<th>Name</th>
			<th>Total Spent</th>
			<th>Owes</th>
			<th>Is Owed</th>
			<th>Balance</th>
		</tr>
		{{#each summaryItem in controller}}
		<tr>
			<td> {{name}} </td>
			<td> {{spent}} </td>
			<td> {{owes}} </td>
			<td> {{owed}} </td>
			<td {{bind-attr class="balanceColor"}}> {{balance}} </td>
		</tr>
		{{else}}
			<li>No summary detail exist... </li>
		{{/each}}
	</table>
</div>


